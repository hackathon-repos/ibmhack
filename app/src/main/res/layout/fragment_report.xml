<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="net.bluemix.seek.fragments.ReportFragment"
    android:background="#FF5BBD95">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uploadBtn"
        android:src="@drawable/upload78"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aliveBtn"
        android:src="@drawable/alive"
        android:background="@null"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/imageView59"
        android:layout_alignEnd="@+id/imageView59" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deadBtn"
        android:src="@drawable/dead"
        android:background="@null"
        android:layout_above="@+id/nameET"
        android:layout_alignLeft="@+id/reportIV"
        android:layout_alignStart="@+id/reportIV" />

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_width="310dp"
        android:layout_height="310dp"
        android:id="@+id/imageView59"
        android:background="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/reportIV"
        fresco:placeholderImage="@drawable/focus"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameET"
        android:hint="Name (optional)"
        android:textColor="#ffffffff"
        android:textColorHint="#ffffffff"
        android:layout_below="@+id/aliveBtn"
        android:layout_alignLeft="@+id/noteET"
        android:layout_alignStart="@+id/noteET"
        android:layout_alignRight="@+id/noteET"
        android:layout_alignEnd="@+id/noteET"
        android:layout_marginTop="15dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noteET"
        android:layout_below="@+id/nameET"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Note (optional)"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffffff"
        android:textColorHint="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Dead"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:textColor="#ffffffff"
        android:layout_below="@+id/imageView59"
        android:layout_alignLeft="@+id/imageView59"
        android:layout_alignStart="@+id/imageView59" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uploadPBar"
        android:layout_alignTop="@+id/uploadBtn"
        android:layout_centerHorizontal="true"
        android:indeterminate="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Alive"
        android:id="@+id/textView7"
        android:textSize="30dp"
        android:textColor="#ffffffff"
        android:layout_below="@+id/imageView59"
        android:layout_alignRight="@+id/imageView59"
        android:layout_alignEnd="@+id/imageView59" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Not Sure"
        android:id="@+id/textView8"
        android:textSize="30dp"
        android:textColor="#ffffffff"
        android:layout_alignTop="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notSureBtn"
        android:src="@drawable/not"
        android:background="@null"
        android:layout_alignBottom="@+id/aliveBtn"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
